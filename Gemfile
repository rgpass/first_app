source 'https://rubygems.org'

# The numbers after it prevent $ bundle install from installing
# the latest version. This forces it to download the suggested version
# If you had '>= 3.2.13' it will install any version above 3.2.13
# If you had '~> 3.2.13' it will install minor releases but not major
# ex: It would install 3.2.14 but not 3.3.1
gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# SQLite doesn't work in production, so this is saying to use SQLite
# only in development
group :development do
	gem 'sqlite3', '1.3.5'
end


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '3.2.5'
  gem 'coffee-rails', '3.2.2'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '1.2.3'
end

gem 'jquery-rails', '2.0.2'

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'
